<div class="container">
  <div id="title">
    <h1>MLB</h1>
    <%= image_tag getLogo(0) %>
    <h2>At a Glance</h2>
  </div>

  <p><%= @games.length %> Games Today</p>

  <div class="game-display-container">
    <% @gamesPK.each_with_index do |game, i| %>
      <%= render 'games', game: game, game_date: @game_dates[i],
          game_status: @game_statuses[i], teams: @game_teams[i] %>
    <% end %>
  </div>
</div>